    "eslint-plugin-react-native": "^3.3.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "react": "^16.7.0",
    "react-native": "^0.57.8",
    "react-test-renderer": "^16.7.0"
