    "react": "^16.5.2",
    "react-native": "^0.57.1"
  },
  "dependencies": {
    "d3-array": "^1.2.4",
    "d3-scale": "^2.1.2",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/test/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
